{
  "name": "kavanet-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/InvisiBug/kavanest-api.git",
  "author": "InvisiBug <matthewjkavanagh@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec \"ts-node \" ./src/index.ts",
    "build": "tsc && tsc-alias && yarn copy:schema",
    "push--live": "./bin/push--live.sh",
    "deploy": "yarn push && ./bin/deploy.sh",
    "deploy--live": "./bin/deploy--live.sh",
    "deploy--test": "./bin/deploy--test.sh",
    "up": "clear && ./bin/start-container.sh",
    "down": "docker compose down",
    "logs": "docker logs kavanest-api -f",
    "copy:schema": "cp -r ./src/schema ./dist/schema"
  },
  "dependencies": {
    "apollo-log": "^1.1.0",
    "apollo-server": "^3.4.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.6.1",
    "graphql-tools": "^8.2.0",
    "mongodb": "^4.1.3",
    "mqtt": "^4.2.8",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.5",
    "nodemon": "^2.0.6",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  }
}
